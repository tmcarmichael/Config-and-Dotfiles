{ // 9-17-20 --- Github Light theme with customizations
  "editor.fontFamily": "MesloLGS NF",
  "editor.fontSize": 16,
  "editor.renderWhitespace": "all",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.renderControlCharacters": false,
  "editor.cursorStyle": "block",
  // "editor.formatOnSave": true,
  "explorer.confirmDelete": false,
  // "gitlens.keymap": "none",
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.hovers.enabled": false,
  "python.showStartPage": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.activityBar.visible": false,
  "workbench.statusBar.visible": true,
  "workbench.colorTheme": "GitHub Light",
  "workbench.iconTheme": "material-icon-theme",
  "tabnine.experimentalAutoImports": true,
  "terminal.integrated.shell.osx": "/bin/zsh",
  "terminal.integrated.fontSize": 16,
  "window.zoomLevel": 0,
  "workbench.colorCustomizations": {
    "editorWhitespace.foreground": "#bababab1",
    "editor.selectionBackground": "#8aa7e0b5",
    "editor.inactiveSelectionBackground": "#aac1ef8f",
    "editor.selectionHighlightBackground": "#e7aa3062",
    "editor.findMatchBackground": "#00aaff4a",
    "editorLineNumber.foreground": "#6f6f6f",
    "editor.lineHighlightBackground": "#b0b0b066",
    "editor.background": "#dddddd",
    "editorCursor.foreground": "#ff80007e",
    "list.hoverBackground": "#aaaaaa",
    "list.activeSelectionBackground": "#999999",
    "list.inactiveSelectionBackground": "#999999",
    "list.hoverForeground": "#ffffff",
    "list.activeSelectionForeground": "#ffffff",
    "list.inactiveSelectionForeground": "#ffffff",
    "sideBar.background": "#cbcbcb",
    "terminalCursor.foreground": "#ff800047",
    "terminal.background": "#d9d9d9",
    "terminal.foreground": "#1c1c1c",
    "terminal.ansiBrightBlack": "#665C54",
    "terminal.ansiBrightBlue": "#6c88ec",
    "terminal.ansiBrightCyan": "#1de03a",
    "terminal.ansiBrightGreen": "#49d715",
    "terminal.ansiBrightMagenta": "#c63c91",
    "terminal.ansiBrightRed": "#e7341d",
    "terminal.ansiBrightWhite": "#7d7d7d",
    "terminal.ansiBrightYellow": "#ffa033",
    "terminal.ansiBlack": "#1f1f1f",
    "terminal.ansiBlue": "#718fefd8",
    "terminal.ansiCyan": "#38d9c6",
    "terminal.ansiGreen": "#5ddc2f",
    "terminal.ansiMagenta": "#8F4673",
    "terminal.ansiRed": "#e7331b",
    "terminal.ansiWhite": "#e1e1e1",
    "terminal.ansiYellow": "#ff9d2c",
  },
  "bracket-pair-colorizer-2.showBracketsInRuler": true,
  "bracket-pair-colorizer-2.showBracketsInGutter": true,
  "bracket-pair-colorizer-2.colors": [
    "#000000",
  ],
  "bracket-pair-colorizer-2.highlightActiveScope": true,
  "bracket-pair-colorizer-2.scopeLineCSS": [
    "borderStyle : solid",
    "borderWidth : 2px",
    "borderColor : {color}",
    "opacity: 0.2"
  ],
}
